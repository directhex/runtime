<Project>
  <Import Project="$([MSBuild]::GetPathOfFileAbove(Directory.Build.props, $(MSBuildThisFileDirectory)..))" />

  <PropertyGroup>
    <PlatformPackageType>ToolPack</PlatformPackageType>
    <PackageBrandNameSuffix>Runtime Dependencies</PackageBrandNameSuffix>
    <GenerateArchive>false</GenerateArchive>
    <SharedFrameworkInstallerName>dotnet-runtime-deps</SharedFrameworkInstallerName>
    <InstallerRuntimeIdentifiers>linux-$(TargetArchitecture)</InstallerRuntimeIdentifiers>
  </PropertyGroup>
</Project>